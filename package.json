{
  "name": "song-of-the-day",
  "version": "0.0.1",
  "description": "Little app to get a song of the day from your team's rotation",
  "author": "Sam Garson <samtgarson@gmail.com>",
  "private": true,
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "connect-loki": "^1.1.0",
    "deep-map-keys": "^1.2.0",
    "express-session": "^1.15.6",
    "inflect": "^0.4.0",
    "interactor": "^2.0.0",
    "jsonwebtoken": "^8.3.0",
    "micro": "^9.1.4",
    "micro-query": "^0.3.0",
    "morgan": "^1.9.0",
    "morgan-json": "^1.1.0",
    "node-async-router": "^0.0.2",
    "nuxt": "npm:nuxt-edge",
    "nuxt-buefy": "^0.1.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-spotify": "^1.0.1",
    "pg": "^7.4.1",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.37.6",
    "sequelize-cli": "^4.0.0",
    "spotify-web-api-node": "^3.1.1",
    "uuid": "^3.2.1",
    "vue-feather-icons": "^4.7.1",
    "vuex-crud": "^0.3.1"
  },
  "pre-commit": [],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "vue",
      "json"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "testMatch": [
      "<rootDir>/test/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "<rootDir>/test/support"
    ],
    "browser": true,
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(interactor)/)"
    ],
    "moduleNameMapper": {
      "^@@/(.+)": "<rootDir>/$1",
      "^@/(.+)": "<rootDir>/src/app/$1"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/test/support/setup/index.js"
  },
  "scripts": {
    "build": "NODE_ENV=production nuxt build",
    "db:reset": "sequelize db:drop && sequelize db:create && sequelize db:migrate",
    "db:test:prepare": "NODE_ENV=test yarn db:reset",
    "dev": "nodemon --watch ./src/api --exec \"nuxt\"",
    "dev:api": "micro-dev ./src/api",
    "start": "nuxt start",
    "test:lint": "eslint --ignore-path .gitignore  --ext .js,.vue .",
    "test:unit": "NODE_ENV=test jest --forceExit",
    "test:watch": "jest --forceExit --watch",
    "test": "yarn test:unit && yarn test:lint"
  },
  "devDependencies": {
    "@samtgarson/eslint-config": "^0.0.2",
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-dynamic-import-node": "^1.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "concurrently": "^3.5.1",
    "dotenv-safe": "^4.0.4",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-import-resolver-jest": "^2.1.1",
    "eslint-plugin-html": "^3.2.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.4.1",
    "eslint-plugin-vue": "beta",
    "faker": "^4.1.0",
    "jest": "^20.0.4",
    "micro-dev": "^2.2.2",
    "minimist": "^1.2.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.18.4",
    "normalize.css": "^7.0.0",
    "pre-commit": "^1.2.2",
    "rosie": "^1.6.0",
    "sass-loader": "^6.0.6",
    "vue-jest": "^1.0.3"
  },
  "peerDependencies": {
    "vue": "^2.4.2",
    "vue-router": "^2.7.0",
    "vuex": "^2.4.0"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "env"
        ],
        "plugins": [
          "dynamic-import-node",
          "babel-plugin-transform-class-properties",
          "babel-plugin-transform-es2015-modules-commonjs",
          "transform-object-rest-spread"
        ]
      }
    }
  }
}
